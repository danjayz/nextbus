---
import { Image } from 'astro:assets';
import colomboKandy from '../assets/background.svg';
import galleMatara from '../assets/background.svg';
import negomboColombo from '../assets/background.svg';
import anuradhapuraPolonnaruwa from '../assets/background.svg';
import nuwaraEliyaBadulla from '../assets/background.svg';
import jaffnaTrincomalee from '../assets/background.svg';

const routes = [
	{ route: 'Colombo - Kandy', image: colomboKandy },
	{ route: 'Galle - Matara', image: galleMatara },
	{ route: 'Negombo - Colombo', image: negomboColombo },
	{ route: 'Anuradhapura - Polonnaruwa', image: anuradhapuraPolonnaruwa },
	{ route: 'Nuwara Eliya - Badulla', image: nuwaraEliyaBadulla },
	{ route: 'Jaffna - Trincomalee', image: jaffnaTrincomalee },
];
---

<section class="bg-gray-100 py-20">
	<div class="container mx-auto px-4">
		<h2 class="text-3xl font-bold mb-12 text-center">Popular Routes</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{routes.map((item) => (
				<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300">
					<Image src={item.image || "/placeholder.svg"} alt={item.route} width={300} height={200} class="w-full h-48 object-cover" />
					<div class="p-6">
						<h3 class="text-xl font-semibold mb-2">{item.route}</h3>
						<p class="text-gray-600 mb-4">Multiple departures daily</p>
						<a href="#" class="text-teal-500 font-semibold hover:underline">View Schedule â†’</a>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

